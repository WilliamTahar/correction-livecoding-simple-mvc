{% extends 'layout.html.twig' %}

{% block stylesheet %}
    <link rel="stylesheet" href="/css/items.css">
{% endblock %}

{% block content %}
    <h1 class="h1">{{ title }}</h1>
    <ul>
        {% for item in items %}
            <li><a href="/items/show?id={{ item.id }}">{{ item.id }}. {{ item.title }}</a></li>
        {% else %}
            <li>Nothing to display</li>
        {% endfor %}
    </ul>
    <a href="/items/add">Ajouter</a>
{% endblock %}
